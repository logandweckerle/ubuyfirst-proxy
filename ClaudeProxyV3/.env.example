# ============================================================
# ClaudeProxyV3 Environment Configuration
# Copy this to .env and fill in your values
# DO NOT commit .env to git!
# ============================================================

# AI API keys
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# eBay Browse API credentials
EBAY_APP_ID=your_ebay_app_id_here
EBAY_CERT_ID=your_ebay_cert_id_here

# Keepa API key
KEEPA_API_KEY=your_keepa_api_key_here

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ============================================================
# Mini PC Settings (only needed when running mini_pc_runner.py)
# ============================================================

# Main PC proxy URL (where main.py runs for AI analysis)
# Set this to your main PC's local IP address
PROXY_URL=http://192.168.1.XXX:8000

# Service toggles (both enabled by default)
ENABLE_POLLER=true
ENABLE_KEEPA=true

# Keepa check interval (seconds)
KEEPA_CHECK_INTERVAL=300

# Path to ASIN tracking CSV
KEEPA_CSV_PATH=asin-tracker-tasks-export.csv
